generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  username      String         @unique
  notifications Notification[]
  follows       Artist[]       @relation("UserFollows")
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Notification {
  id       String @id @default(uuid())
  context  String
  album    Album  @relation(fields: [albumId], references: [id])
  albumId  String
  user     User   @relation(fields: [userId], references: [id])
  userId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Artist {
  id         String   @id @default(uuid())
  spotifyId  String   @unique
  name       String
  genres     String[]
  popularity Int?
  images     Json
  externalUrl Json

  albums     Album[]

  followers  User[] @relation("UserFollows")

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Album {
  id          String   @id @default(uuid())
  spotifyId   String   @unique
  albumType   String
  genres      String[]
  name        String
  artists     Artist[]
  images      Json
  releaseDate DateTime
  totalTracks Int

  externalUrl Json

  notifications Notification[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?
}


